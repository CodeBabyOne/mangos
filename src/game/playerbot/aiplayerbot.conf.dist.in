##########################################
# MANGOS Ai Playerbot Configuration file #
##########################################

[AiPlayerbotConf]
ConfVersion=2010102201

# Enable or disable AI Playerbot
AiPlayerbot.Enabled = true

# Max AI iterations per tick
AiPlayerbot.IterationsPerTick = 10

# Allow/deny bots from your guild
AiPlayerbot.AllowGuildBots = true

# Delay between two short-time spells cast
AiPlayerbot.GlobalCooldown = 500

# Delay before following master to a dungeon portal
AiPlayerbot.TeleportDelay = 10000

# Delay between two bot actions
AiPlayerbot.ReactDelay = 100

# Distances
AiPlayerbot.SightDistance = 50.0f
AiPlayerbot.SpellDistance = 25.0f
AiPlayerbot.ReactDistance = 100.0f
AiPlayerbot.GrindDistance = 75.0f
AiPlayerbot.LootDistance = 20.0f
AiPlayerbot.FleeDistance = 15.0f
AiPlayerbot.TooCloseDistance = 7.0f
AiPlayerbot.MeleeDistance = 2.0f
AiPlayerbot.FollowDistance = 2.0f

# Health/Mana levels
AiPlayerbot.CriticalHealth = 25
AiPlayerbot.LowHealth = 45
AiPlayerbot.MediumHealth = 65
AiPlayerbot.AlmostFullHealth = 85
AiPlayerbot.LowMana = 15
AiPlayerbot.MediumMana = 40

# Enable random bot system
AiPlayerbot.RandomBotAutologin = false

# Create random bot characters automatically
AiPlayerbot.RandomBotAutoCreate = true

# Random bot count
AiPlayerbot.MinRandomBots = 1
AiPlayerbot.MaxRandomBots = 10

# Accounts to create for random bots
AiPlayerbot.RandomBotAccountPrefix = "rndbot"
AiPlayerbot.RandomBotAccountCount = 50

# Maps to teleport random bots
AiPlayerbot.RandomBotMaps = "0,1"

# Change random bot has lower gear
AiPlayerbot.RandomGearLoweringChance = 0.15

# Quest items to leave (do not destroy)
AiPlayerbot.RandomBotQuestItems = "6948,5175,5176,5177,5178"

# Spells every random bot will learn on randomize (54197 - cold weather flying)
AiPlayerbot.RandomBotSpellIds = 54197

# Intervals
AiPlayerbot.RandomBotUpdateInterval = 60
AiPlayerbot.RandomBotCountChangeInterval = 5 * 24 * 3600
AiPlayerbot.MinRandomBotInWorldTime = 2 * 3600
AiPlayerbot.MaxRandomBotInWorldTime = 14 * 24 * 3600
AiPlayerbot.MinRandomBotRandomizeTime = 2 * 3600
AiPlayerbot.MaxRandomRandomizeTime = 14 * 24 * 3600
AiPlayerbot.MinRandomBotPvpTime = 120
AiPlayerbot.MaxRandomBotPvpTime = 3 * 3600
AiPlayerbot.MinRandomBotsPerInterval = 1
AiPlayerbot.MaxRandomBotsPerInterval = 5

# How far random bots are teleported after death
AiPlayerbot.RandomBotTeleportDistance = 400

# Enemy/Friend random bot percentage
AiPlayerbot.RandomBotEnemyPercent = 30

# Debug switches
AiPlayerbot.SpellDump = false

